<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue_orange_white">

    <ImageView
        android:id="@+id/imgPerfilUser_jogos"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_user" />

    <Button
        android:id="@+id/btHome_jogos"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bt_home_torneios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/painel_Jogos"
        android:layout_width="389dp"
        android:layout_height="70dp"
        android:layout_marginTop="116dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bt_painel_jogos" />

    <ImageView
        android:id="@+id/img_EquipaA_Jogos"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/painel_Jogos"
        app:layout_constraintStart_toEndOf="@+id/text_NomeEquipaA_Jogos"
        app:layout_constraintTop_toTopOf="@+id/painel_Jogos"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_team_logo" />

    <ImageView
        android:id="@+id/img_EquipaB_Jogos"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/painel_Jogos"
        app:layout_constraintEnd_toStartOf="@+id/text_NomeEquipaB_Jogos"
        app:layout_constraintTop_toTopOf="@+id/painel_Jogos"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_team_logo" />

    <TextView
        android:id="@+id/text_NomeEquipaA_Jogos"
        android:layout_width="103dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto"
        android:text="Benfica"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/painel_Jogos"
        app:layout_constraintStart_toStartOf="@+id/painel_Jogos"
        app:layout_constraintTop_toTopOf="@+id/painel_Jogos"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_NomeEquipaB_Jogos"
        android:layout_width="103dp"
        android:layout_height="34dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical|right"
        android:text="Benfica"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/painel_Jogos"
        app:layout_constraintEnd_toEndOf="@+id/painel_Jogos"
        app:layout_constraintTop_toTopOf="@+id/painel_Jogos"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtVS_Jogos"
        android:layout_width="32dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto"
        android:text="VS"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/painel_Jogos"
        app:layout_constraintEnd_toStartOf="@+id/img_EquipaB_Jogos"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/img_EquipaA_Jogos"
        app:layout_constraintTop_toTopOf="@+id/painel_Jogos"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>